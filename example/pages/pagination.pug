extends ../page_layout.pug

block title
    title Ga-UI PAGINATION
block contents
    .page-wrapper
        section#pagination
            .section-title
                h1 Pagination
            .section-contents
                h4.contents-title 기본
                .ga-card.attached
                    .contents-wrapper
                        .ga-pagination
