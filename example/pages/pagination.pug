                            .pagination-nav
                                i.fa.fa-chevron-left
                            .pagination-page-wrapper
                                .pagination-num.active 1
                                each item in items
                                    .pagination-num=`${item}`
                            .pagination-nav
                                i.fa.fa-chevron-right
