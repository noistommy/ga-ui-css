                .gray-item.gray-15
            .column.col-3
                .gray-item.gray-15
            .column.col-12
                .gray-item.gray-15
    .page-wrapper.summary
        h5.header elements
        .ga-grid
            .column.span-1 
                .sub-title input
            .column.span-4
                .field
                    .ga-input.fluid
                        input(type="text", placeholder="입력하세요") 
                .field
                    .ga-input.fluid.disabled
                        input(type="text", placeholder="입력하세요") 
            .column.span-1
            .column.span-1
                .sub-title buttons
            .column.span-5
                .field
                    button.ga-button.primary 메인
                    button.ga-button.secondary 강조
                .field
                    button.ga-button.success 성공
                    button.ga-button.info 정보
                    button.ga-button.danger 위험
                    button.ga-button.attention 경고
                    button.ga-button.importance 중요
            .column.span-1 
                .sub-title select box
            .column.span-4
                .field
                    .ga-select-box.dropdown
                        .selected-item.ga-input.icon.right.fluid
                            input(type="text", placeholder="선택하세요", readonly)
                            i.icon.fa.fa-chevron-down
                        .select-menu
                            .ga-list.selection
                                each col in [1, 2, 3, 4, 5, 6]
                                    .icon.item.option-item
                                        = `option${col}`
                .field
                     .ga-select-box.float
                        .selected-item.ga-input.icon.right
                            input(type="text", placeholder="선택하세요", readonly)
                            i.icon.fa.fa-chevron-down
                        .select-menu
                            .ga-list.selection
                                each col in [1, 2, 3, 4, 5, 6]
                                    .icon.item.option-item
                                        = `option${col}`
            .column.span-1
            .column.span-1
                .sub-title badge
            .column.span-5
                .ga-button
                    | Badge
                    span.ga-badge.float 0
                .ga-button
                    | Badge 1
                    span.ga-badge.float.primary 1
                .ga-button
                    | Badge New
                    span.ga-badge.float.red N
                .ga-button
                    | Badge In
                    span.ga-badge.mark.primary

