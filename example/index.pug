    .page-wrapper.summary#typography
        h5.header typography
        .ga-grid2.set-rows.align-center(style="--grid-row-num: 6")
            .column.col-6.row-4
                .ga-grid
                    .column.span-3.mainWord Aa
                    .column.span-8.mainWord 가나다
                    .column.span-12
                        
            //- .column.col-6.row-4 2
            .column.col-6.row-4
                h1.header [H1] Frog UI System (28px)
                h2.header [H2] Frog UI System (24px)
                h3.header [H3] Frog UI System (18px)
                h4.header [H4] Frog UI System (16px)
                h5.header [H5] Frog UI System (14px)
            .column.col-6.row-2
                p ABCDEFGHIJKLMNOPQRSTUVWXYZ
                p abcdefghijklmnopqrstuvwxyz
                p 1234567890 ,./(){}[]\|:;"'?
                p 가나다라마바사 스포크 한 산스
            .column.col-6.row-2
                .ga-grid
                    .column.span-2 [light]
                    .column.span-6.light Frog UI System (100)
                    .column.span-4
                    .column.span-2 [regular]
                    .column.span-6 Frog UI System (400)
                    .column.span-4
                    .column.span-2 [bold]
                    .column.span-6.bold Frog UI System (600)
                    .column.span-4
                    .column.span-2 [bolder]
                    .column.span-6.bolder Frog UI System (900)
                    .column.span-4
    .page-wrapper.summary#colors
        h5.header color system
        .ga-grid
